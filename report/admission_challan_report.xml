                        .voucher-container {
                            font-family: "Segoe UI", Arial, sans-serif;
                            color: #2c3e50;
                            font-size: 14px;
                            padding: 10px 5px;
                        }

                        .page {
                            page-break-after: always;
                        }

                        .page:last-child {
                            page-break-after: avoid;
                        }

                        .voucher-header {
                            text-align: center;
                            margin-bottom: 25px;
                            padding-bottom: 15px;
                            border-bottom: 3px double #3498db;
                        }

                        .voucher-title {
                            font-size: 28px;
                            font-weight: 700;
                            text-transform: uppercase;
                            letter-spacing: 2px;
                            margin: 0;
                        }

                        .academic-session {
                            font-size: 16px;
                            color: #6c757d;
                            margin-top: 5px;
                        }

                        .copy-title {
                            text-align: center;
                            font-size: 18px;
                            font-weight: bold;
                            margin: 15px 0;
                            padding: 8px;
                            background-color: #f0f8ff;
                            border-radius: 4px;
                        }

                        .bank-info {
                            border: 1.5px solid #dcdcdc;
                            border-radius: 6px;
                            padding: 14px;
                            margin: 20px 0 25px 0;
                            text-align: center;
                            background-color: #f8f9fa;
                        }

                        .bank-title {
                            font-weight: 700;
                            font-size: 15px;
                            margin-bottom: 8px;
                        }

                        .bank-account {
                            font-size: 14px;
                            line-height: 1.6;
                        }

                        .info-table {
                            width: 100%;
                            border-collapse: collapse;
                            margin-bottom: 25px;
                            border: 1.5px solid #dcdcdc;
                        }

                        .info-table th,
                        .info-table td {
                            border: 1px solid #dcdcdc;
                            padding: 10px;
                            text-align: center;
                            vertical-align: middle;
                        }

                        .info-table th {
                            background-color: #3498db;
                            color: #fff;
                            font-weight: 600;
                            font-size: 14px;
                        }

                        .info-table td {
                            font-size: 14px;
                            font-weight: 500;
                        }

                        .info-label {
                            background-color: #eef6ff;
                            font-weight: 600;
                        }

                        .amount-table {
                            width: 100%;
                            border-collapse: collapse;
                            border: 1.5px solid #dcdcdc;
                            margin-top: 10px;
                        }

                        .amount-table th,
                        .amount-table td {
                            border: 1px solid #dcdcdc;
                            padding: 14px;
                            text-align: center;
                            vertical-align: middle;
                        }

                        .amount-table thead th {
                            background-color: #2c3e50;
                            color: white;
                            font-size: 15px;
                            font-weight: 700;
                            text-align: center;
                            vertical-align: middle;
                        }

                        .amount-table td {
                            font-size: 15px;
                        }

                        .amount-cell {
                            font-weight: 700;
                            color: #27ae60;
                            text-align: center;
                            vertical-align: middle;
                        }

                        .total-row td {
                            font-weight: 700;
                            background-color: #f2f2f2;
                            font-size: 16px;
                            text-align: center;
                            vertical-align: middle;
                        }

