                            text-align: center;
                            margin-top: 35px;
                            font-size: 12px;
                            color: #7f8c8d;
                            border-top: 1px dashed #ccc;
                            padding-top: 10px;
                        }

                        .signature-section {
                            margin-top: 50px;
                            display: table;
                            width: 100%;
                        }

                        .signature-box {
                            display: table-cell;
                            text-align: center;
                            padding-top: 30px;
                            border-top: 1px solid #999;
                            font-size: 13px;
                            width: 50%;
                        }

