        <field name="model">student.application</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">odoo19_academy.report_fee_voucher_template</field>
        <field name="report_file">odoo19_academy.report_fee_voucher_template</field>
        <field name="print_report_name">'Voucher_%s' % (object.name)</field>
        <field name="binding_model_id" ref="model_student_application" />
        <field name="binding_type">report</field>
