<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_academic_session_list" model="ir.ui.view">
        <field name="name">academy.academic.session.list</field>
        <field name="model">academy.academic.session</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_academic_session_form" model="ir.ui.view">
        <field name="name">academy.academic.session.form</field>
        <field name="model">academy.academic.session</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. 2025-2026 Semester 1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Term Schemes" name="terms">
                            <field name="term_scheme_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="short_code"/>
                                    <field name="current_term"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_academic_session" model="ir.actions.act_window">
        <field name="name">Academic Sessions</field>
        <field name="res_model">academy.academic.session</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_term_scheme_list" model="ir.ui.view">
        <field name="name">academy.term.scheme.list</field>
        <field name="model">academy.term.scheme</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="short_code"/>
                <field name="session_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="current_term"/>
            </list>
        </field>
    </record>

    <record id="view_term_scheme_form" model="ir.ui.view">
        <field name="name">academy.term.scheme.form</field>
        <field name="model">academy.term.scheme</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="General Information">
                            <field name="session_id"/>
                            <field name="name"/>
                            <field name="short_code"/>
                        </group>
                        <group string="Dates &amp; Status">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="current_term"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Notes about this term..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_term_scheme" model="ir.actions.act_window">
        <field name="name">Term Schemes</field>
        <field name="res_model">academy.term.scheme</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>