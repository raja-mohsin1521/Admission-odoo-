<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_career_list" model="ir.ui.view">
        <field name="name">academy.career.list</field>
        <field name="model">academy.career</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="short_code"/>
            </list>
        </field>
    </record>

    <record id="view_career_form" model="ir.ui.view">
        <field name="name">academy.career.form</field>
        <field name="model">academy.career</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="short_code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_career" model="ir.actions.act_window">
        <field name="name">Careers</field>
        <field name="res_model">academy.career</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>