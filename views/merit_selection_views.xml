<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_merit_selection_register_search" model="ir.ui.view">
        <field name="name">merit.selection.register.search</field>
        <field name="model">merit.selection.register</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="academic_session_id"/>
                <field name="academic_term_id"/>
                <field name="state"/>

                <separator/>

                <filter name="group_session"
                        string="Group by Session"
                        context="{'group_by':'academic_session_id'}"/>

                <filter name="group_term"
                        string="Group by Term"
                        context="{'group_by':'academic_term_id'}"/>

                <filter name="group_state"
                        string="Group by Status"
                        context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>


    <record id="view_merit_selection_register_list" model="ir.ui.view">
        <field name="name">merit.selection.register.list</field>
        <field name="model">merit.selection.register</field>
        <field name="arch" type="xml">
            <list string="Master Merit Lists">
                <field name="name"/>
                <field name="academic_session_id"/>
                <field name="academic_term_id"/>
                <field name="merit_round"/>
                <field name="state"
                       widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'running'"
                       decoration-success="state == 'done'"/>
            </list>
        </field>
    </record>


    <record id="view_merit_selection_register_form" model="ir.ui.view">
        <field name="name">merit.selection.register.form</field>
        <field name="model">merit.selection.register</field>
        <field name="arch" type="xml">
            <form string="Master Merit Selection">

                <header>
                    <button name="action_generate_merit"
                            string="Generate Merit Ranking"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_next_merit"
                            string="Generate Next Merit List"
                            type="object"
                            class="btn-success"
                            invisible="state != 'running'"/>

                    <button name="action_close_admission"
                            string="Close Admission"
                            type="object"
                            class="btn-danger"
                            invisible="state != 'running'"/>

                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,running,done"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Merit List Title"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="academic_session_id"
                                   readonly="state != 'draft'"/>
                            <field name="academic_term_id"
                                   readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="merit_round" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Merit Rankings">
                            <field name="line_ids" readonly="state == 'done'">
                                <list create="0" delete="0">
                                    <field name="rank"/>
                                    <field name="applicant_id"/>
                                    <field name="aggregate_score"/>
                                    <field name="allotted_program_id"/>
                                    <field name="is_allocated"
                                           readonly="merit_round != 0"/>
                                    <button name="action_withdraw"
                                            type="object"
                                            string="Withdraw"
                                            class="btn-danger"
                                            invisible="merit_round == 0"/>
                                    <field name="merit_round"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>


    <record id="action_merit_selection_register" model="ir.actions.act_window">
        <field name="name">Master Merit List</field>
        <field name="res_model">merit.selection.register</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_merit_selection_register_search"/>
    </record>

</odoo>
 