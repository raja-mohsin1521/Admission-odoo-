<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_campus_list" model="ir.ui.view">
        <field name="name">academy.campus.list</field>
        <field name="model">academy.campus</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="view_campus_kanban" model="ir.ui.view">
        <field name="name">academy.campus.kanban</field>
        <field name="model">academy.campus</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>Code: <field name="code"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_institute_list" model="ir.ui.view">
        <field name="name">academy.institute.list</field>
        <field name="model">academy.institute</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="campus_id"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <record id="view_institute_form" model="ir.ui.view">
        <field name="name">academy.institute.form</field>
        <field name="model">academy.institute</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="campus_id"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="website" widget="url"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Departments" name="departments">
                            <field name="department_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_department_list" model="ir.ui.view">
        <field name="name">academy.department.list</field>
        <field name="model">academy.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="institute_id"/>
                <field name="campus_id"/> </list>
        </field>
    </record>

    <record id="view_department_search" model="ir.ui.view">
        <field name="name">academy.department.search</field>
        <field name="model">academy.department</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="institute_id"/>
                <filter string="Group By Institute" name="group_by_institute" context="{'group_by': 'institute_id'}"/>
                <filter string="Group By Campus" name="group_by_campus" context="{'group_by': 'campus_id'}"/>
            </search>
        </field>
    </record>

    <record id="action_academy_campus" model="ir.actions.act_window">
        <field name="name">Campuses</field>
        <field name="res_model">academy.campus</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="action_academy_institute" model="ir.actions.act_window">
        <field name="name">Institutes</field>
        <field name="res_model">academy.institute</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <record id="action_academy_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">academy.department</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_department_search"/>
    </record>

</odoo>