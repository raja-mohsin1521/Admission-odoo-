<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="rule_student_applicant_portal" model="ir.rule">
            <field name="name">Student Applicant: Portal Own Doc</field>
            <field name="model_id" ref="model_student_applicant"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_student_applicant_employee" model="ir.rule">
            <field name="name">Student Applicant: Employee All Docs</field>
            <field name="model_id" ref="model_student_applicant"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_student_application_portal" model="ir.rule">
            <field name="name">Student Application: Portal Own Doc</field>
            <field name="model_id" ref="model_student_application"/>
            <field name="domain_force">[('applicant_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_student_application_employee" model="ir.rule">
            <field name="name">Student Application: Employee All Docs</field>
            <field name="model_id" ref="model_student_application"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

    </data>
</odoo>